<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile UI</title>
    <script src="https://kit.fontawesome.com/1144a62fa6.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/cssAREcss/profile.css">
</head>

<body>
<div class="navbar">
        <div class="slidin-logo">Slidin'</div>
        <!-- <div class="slidin-logo"><img src="/homeimages/cubes.webp" alt=""></div> -->
        <div class="nav-container">
            <div class="nav-icons">
                <a href="/home"><i class="fa-solid fa-house-chimney" style="color: #fff;"></i></a>
                <div class="search-container">
                    <form action="/profile" method="post" enctype="multipart/form-data" id="searchForm">
                        <input type="text" id="search" placeholder="&#x1F50E;&#xFE0E; Search.." name="value" oninput="submitForm()" <% if (value) { %> 
                        value="<%= value %>"
                        <% } %>>
                    </form>
                </div>
            </div>
            <div class="nav-icons">
                <i class="fa-solid fa-circle-plus"></i>
                <i class="fa-solid fa-heart"></i>
                <a href="/chat"> <i class="fa-solid fa-comment"></i></a>
                <i>
                    <a href="/profile">
                        <div id="image-container">
                            <img id="profile-image" src="<%= userpath %>" alt="" srcset="" />
                            <div id="crop-preview"></div>
                        </div>
                    </a>
                </i>
                <i id="setting" onclick="rotate()" class="fa-solid fa-gear"></i>
            </div>
        </div>
    </div>
    <div>
        <ul>
            <% if (results) { %>
            <% results.forEach(function(result) { %>
                <li>
                    <div class="card">
                        <a href="/profile/<%= result.username %>">
                            <div class="card_load">
                                <img id="search-profilepics" src="<%= path %>" alt="Profile Pic">                                
                            </div>
                            <div class="card_load_extreme_title">
                                <span>
                                    <%= result.username %>
                                </span>
                            </div>
                        </a>
                        <div class="card_load_extreme_descripion">
                            <button>Add Friend</button>
                        </div>
                    </div>
                </li>
            <% }) %>
            <% } %>
        </ul>
    </div>
    <div class="banner"><img src="/homeimages/cubes.webp" alt=""></div>
    <div class="profile-container">
        <div class="profile-image">
            <img src="<%= path %>" alt="">
        </div>
        <div class="profile-name">
            <%=username %>
        </div>
        <div class="profile-bio">
            <p>Bio</p>
            <p>It's just a cigarette and it harms your pretty lungs</p>
        </div>
        <div class="profile-stats">
            <div>
                <span>69</span>
                <p>Posts</p>
            </div>
            <div>
                <span>586</span>
                <p>Friends</p>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        function submitForm() {
            document.getElementById("searchForm").submit();
        }
        let backend = "<%= value %>"
        if (backend !== "false") {
            let input = document.getElementById("search")
            input.focus();
            var val = input.value;
            input.value = '';
            input.value = val;
        }
        function rotate() {
            let setting = document.getElementById("setting")
            setting.style.transform = "rotate(360deg)"
            setting.style.transition = "all 1s ease-in-out"
        }

        function togglePopup() {
            document.getElementById("popup-1").classList.toggle("active");
        }

    </script>
</body>

</html>