<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile UI</title>
    <script src="https://kit.fontawesome.com/1144a62fa6.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/cssAREcss/profile.css">
</head>

<body>
    <div class="navbar">
        <div class="slidin-logo">Slidin'</div>
        <!-- <div class="slidin-logo"><img src="/homeimages/cubes.webp" alt=""></div> -->
        <div class="nav-container">
            <div class="nav-icons">
                <i class="fa-solid fa-house-chimney" style="color: #fff;"></i>
                <div class="search-container">
        <form action="/profile
        " method="post" enctype="multipart/form-data" id="searchForm">
            <input type="text" id="search" placeholder="Search.." name="value" oninput="submitForm()" <% if (value) { %> value="<%= value %>" <% } %>>
        </form>
            <% if (results) { %>
        <div class="search-results">
            <% results.forEach(function(result) { %>
                <div class="search-result">
                    <a href="/profile/<%= result.username %>">
                        <img src="/uploads/<%= result.profilePic %>" alt="Profile Pic">
                        <span><%= result.username %></span>
                      </a>
                    </div>
                  <% }) %>
                </div>
              <% } %>
            </div>
        </div>
            <div class="nav-icons">
                <i class="fa-solid fa-circle-plus"></i>
                <i class="fa-solid fa-heart"></i>
                <i class="fa-solid fa-comment"></i>
                <i><div id="image-container">
                    <img id="profile-image" src="<%=path %>" alt="" srcset="" />
                    <div id="crop-preview"></div>
                    </div>
                    <div class="nav-item profile">
                  </div>
                </i>
                <i class="fa-solid fa-gear"></i>
            </div>
        </div>
    </div>
    <div class="banner"><img src="/homeimages/cubes.webp" alt=""></div>
    <div class="profile-container">
        <div class="profile-image">
            <img src="<%=path %>"
                alt="">
        </div>
        <div class="profile-name"><%=username %></div>
        <div class="profile-bio">
            <p>Bio</p>
            <p>It's just a cigarette and it harms your pretty lungs</p>
        </div>
        <div class="profile-stats">
            <div>
                <span>69</span>
                <p>Posts</p>
            </div>
            <div>
                <span>586</span>
                <p>Friends</p>
            </div>
        </div>
        <div class="profile-actions">
            <button>Edit Profile</button>
            <button>View Archive</button>
        </div>
    </div>

    <div class="post-grid">
        <!-- Post placeholders -->
        <div class="post"><img
                src="/profilepics/created-random-people-using-chatgpt-midjourney-do-you-know-v0-q1aa450i5dqb1.webp"
                alt=""></div>
        <div class="post"><img
                src="/profilepics/created-random-people-using-chatgpt-midjourney-do-you-know-v0-q1aa450i5dqb1.webp"
                alt=""></div>
        <div class="post"><img
                src="/profilepics/created-random-people-using-chatgpt-midjourney-do-you-know-v0-q1aa450i5dqb1.webp"
                alt=""></div>

    </div>
     <script type="text/javascript">
        function submitForm() {
            document.getElementById("searchForm").submit();
        }
        let backend = "<%= value %>"
        if (backend !== "false") {
            let input = document.getElementById("search")
            input.focus();   
            var val = input.value; 
            input.value = '';
            input.value = val;   
        }
    </script>
</body>

</html>