<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile UI</title>
    <script src="https://kit.fontawesome.com/1144a62fa6.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/cssAREcss/profile.css">
</head>

<body>
<%- include('navbar.ejs') -%>
    <div>
        <ul>
            <% if (results) { %>
                <% results.forEach(function(result) { %>
                    <li>
                        <div class="card">
                            <a href="/profilepics/<%= result.username %>">
                                <div class="card_load">
                                    <img src="/uploads/<%= result.profilePic %>" alt="Profile Pic">
                                </div>
                                <div class="card_load_extreme_title">
                                    <span>
                                        <%= result.username %>
                                    </span>
                                </div>
                            </a>
                            <div class="card_load_extreme_descripion">
                                <button>Add Friend</button>
                            </div>
                        </div>
                    </li>
                    <% }) %>
                        <% } %>
        </ul>
    </div>
    <div class="banner"><img src="/homeimages/cubes.webp" alt=""></div>
    <div class="profile-container">
        <div class="profile-image">
            <img src="<%=path %>" alt="">
        </div>
        <div class="profile-name">
            <%=username %>
        </div>
        <div class="profile-bio">
            <p>Bio</p>
            <p>It's just a cigarette and it harms your pretty lungs</p>
        </div>
        <div class="profile-stats">
            <div>
                <span>69</span>
                <p>Posts</p>
            </div>
            <div>
                <span>586</span>
                <p>Friends</p>
            </div>
        </div>
        <div class="profile-actions">
            <button>Edit Profile</button>
            <button>View Archive</button>
        </div>
    </div>
    <div class="post-grid">
        <!-- Post placeholders -->
        <div class="post"><img
                src="/profilepics/created-random-people-using-chatgpt-midjourney-do-you-know-v0-q1aa450i5dqb1.webp"
                alt=""></div>
        <div class="post"><img
                src="/profilepics/created-random-people-using-chatgpt-midjourney-do-you-know-v0-q1aa450i5dqb1.webp"
                alt=""></div>
        <div class="post"><img
                src="/profilepics/created-random-people-using-chatgpt-midjourney-do-you-know-v0-q1aa450i5dqb1.webp"
                alt=""></div>

    </div>
    <script type="text/javascript">
        function submitForm() {
            document.getElementById("searchForm").submit();
        }
        let backend = "<%= value %>"
        if (backend !== "false") {
            let input = document.getElementById("search")
            input.focus();
            var val = input.value;
            input.value = '';
            input.value = val;
        }
        function rotate() {
            let setting = document.getElementById("setting")
            setting.style.transform = "rotate(360deg)"
            setting.style.transition = "all 1s ease-in-out"
        }

        function togglePopup() {
            document.getElementById("popup-1").classList.toggle("active");
        }

    </script>
</body>

</html>